<!-- Main -->
{{> steps}}
<!-- Process Steps -->
<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col"> </th>
                            <th scope="col">Product</th>
                            <th scope="col">Service Price</th>
                            <th scope="col">Date Start</th>
                            <th scope="col">Date End</th>
                            <th scope="col">Time Start</th>
                            <th scope="col" class="text-center">Quantity</th>
                            <th scope="col" class="text-right">Unit Cost</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}
                        <!-- {item,quantity,price} -->
                        <form class="form-cart-item-update" data-id="{{item.id}}">
                            <tr>
                                <td><img src="{{item.imagepath}}" style="width:50px; height:50px" /> </td>
                                <td>{{item.title}}</td>
                                <td>{{item.price}}đ</td>
                                <td>{{item.dateStart}}</td>
                                <td>{{item.dateEnd}}</td>
                                <td>{{item.timeStart}}</td>
                                <td>
                                    <input id="quantity{{item.id}}" class="form-control" type="number" min="1" max="10"
                                        required="" value="{{quantity}}" />
                                </td>
                                <td class="text-right">{{price}}đ</td>
                                <td class="text-right">
                                    <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-check"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger btn-cart-remove" data-id="{{item.id}}"><i
                                            class="fa fa-trash"></i> </button>
                                </td>
                            </tr>
                        </form>
                        {{/each}}

                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>

                            <td class="text-right h6">Total Cost</td>
                            <td class="text-right h6">{{totalPrice}}đ</td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col mb-2">
            <div class="row">
                <div class="col-sm-12  col-md-6">
                    <a href="/" class="btn btn-block btn-light">Continue Shopping</a>
                </div>
                <div class="col-sm-12 col-md-6 text-right">
                    <a href="/cart/checkout" class="btn btn-lg btn-block btn-success text-uppercase">Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>