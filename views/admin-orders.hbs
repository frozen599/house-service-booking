<!--Bắt đầu table Quản lí đơn hàng-->
<div class="container" style="margin-top: 2em;">
    <div class="container text-right">
        <a href="#" id="btnThem" class="btn btn-success btn-sm" data-toggle="modal" data-target="#sanPhamModal"><i
                style="padding: 0 5px;" class="fa fa-plus" aria-hidden="true"></i>Thêm</a>
        {{!-- <a href="#" id="btnNhapDuLieu" class="btn btn-success btn-sm"><i style="padding: 0 5px;"
                class="fas fa-file-import" aria-hidden="true"></i>Nhập Dữ Liệu</a> --}}
        <a href="/users/admin/export" id="btnXuatDuLieu" class="btn btn-success btn-sm"><i style="padding: 0 5px;"
                class="fas fa-file-export" aria-hidden="true"></i>Xuất Dữ Liệu</a>
        {{!-- <a href="#" id="btnLoc" class="btn btn-success btn-sm"><i style="padding: 0 5px;" class="fa fa-filter"
                aria-hidden="true"></i>Lọc</a> --}}
    </div>
    <div class="card border-0" style="margin-top: 1em;">
        <div class="card-body p-0">
            <div class="table-responsive table-invoice">
                <table id="dtBasicExample" class="table table-striped table-hover table-sm" cellspacing="2">
                    <thead style="font-size: 11pt;">
                        <tr>
                            <th class="th-sm">ID</th>
                            <th class="th-sm">Khách Hàng</th>
                            <th class="th-sm">Số Điện Thoại</th>
                            <th class="th-sm">Gói Dịch Vụ</th>
                            <th class="th-sm">Số Nhân Viên</th>
                            <th class="th-sm">Bắt Đầu</th>
                            <th class="th-sm">Thời gian</th>
                            <th class="th-sm">Kết thúc</th>
                            <th class="th-sm">Địa Chỉ</th>
                            <th class="th-sm">Trạng Thái</th>
                        </tr>
                    </thead>
                    <tbody style="font-size: 11pt;">
                        {{#each orders}}
                        <tr>
                            <td>{{address.id}}</td>
                            <td>{{address.name}}</td>
                            <td>{{address.phone}}</td>
                            <td>{{detail.Service.title}}</td>
                            <td>{{detail.quantity}}</td>
                            <td>{{formatDate detail.dateStart}}</td>
                            <td>{{detail.timeStart}}</td>
                            <td>{{formatDate detail.dateEnd}}</td>
                            <td>{{address.address}}, {{address.district}}</td>
                            <td>
                                <div class="badge badge-warning">{{address.status}}</div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!--Kết thúc table Quản lí đơn hàng-->

<!--Dialog Thông tin sản phẩm-->
<div class="modal fade" id="sanPhamModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <form action="/users/admin-order" method="post">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thông tin đơn hàng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!--Thông tin chung đơn hàng-->
                    <div class="row">
                        <div class="form-group col">
                            <label class="col-md-12 control-label" for="dateStart">
                                <h6>Ngày Bắt Đầu</h6>
                            </label>
                            <div class="col-md-12">
                                <input id="dateStart" data-date-inline-picker="false" data-date-open-on-focus="true"
                                    name="dateStart" type="date" placeholder="Ngày Bắt Đầu"
                                    class="form-control input-md" />
                            </div>
                        </div>
                        <div class="form-group col">
                            <label class="col-md-12 control-label" for="timeStart">
                                <h6>Giờ Bắt Đầu</h6>
                            </label>
                            <div class="col-md-12">
                                <input id="timeStart" name="timeStart" type="time" placeholder="Giờ bắt đầu"
                                    class="form-control input-md" />
                            </div>
                        </div>
                        <div class="form-group col">
                            <label class="col-md-12 control-label" for="dateEnd">
                                <h6>Ngày Kết thúc</h6>
                            </label>
                            <div class="col-md-12">
                                <input id="dateEnd" data-date-inline-picker="false" data-date-open-on-focus="true"
                                    name="dateEnd" type="date" placeholder="Ngày Kết Thúc"
                                    class="form-control input-md" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="col-md-12 control-label" for="TenKhachHang">
                                <h6>Tên khách hàng</h6>
                            </label>
                            <div class="col-md-12">
                                <input id="TenSanPham" name="TenKhachHang" type="text" placeholder="Tên khách hàng"
                                    class="form-control input-md" required="">
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-12 control-label" for="username">
                                <h6>Username</h6>
                            </label>
                            <div class="col-md-12">
                                <input id="TenSanPham" name="username" type="text" placeholder="Username"
                                    class="form-control input-md" required="">
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-12 control-label" for="SoDienThoai">
                                <h6>Số điện thoại</h6>
                            </label>
                            <div class="col-md-12">
                                <input id="SoDienThoai" name="SoDienThoai" type="tel" placeholder="Số điện thoại"
                                    class="form-control input-md">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label class="col-md-12 control-label" for="email">
                                <h6>Email</h6>
                            </label>
                            <div class="col-md-12">
                                <input id="email" name="email" type="text" placeholder="Email"
                                    class="form-control input-md" required="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-8">
                            <label class="col-md-12 control-label" for="address">
                                <h6>Đường</h6>
                            </label>
                            <div class="col-md-12">
                                <input id="address" name="address" type="text" placeholder="Đường"
                                    class="form-control input-md" required="">
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-12 control-label" for="district">
                                <h6>Quận</h6>
                            </label>
                            <div class="col-md-12">
                                <input id="district" name="district" type="text" placeholder="Quận"
                                    class="form-control input-md" required="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="col-md-12 control-label" for="SoNguoi">
                                <h6>Số Người / Số Lượng</h6>
                            </label>
                            <div class="col-md-12">
                                <input id="SoNguoi" name="SoNguoi" type="number" placeholder="Số Người"
                                    class="form-control input-md">
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-12 control-label" for="paymentMethod">
                                <h6>Phương Thức Thanh Toán</h6>
                            </label>
                            <div class="col-md-12">
                                <div class="form-group col">
                                    <input type="radio" name="paymentMethod" value="COD" id="COD" />
                                    <label for="COD" class="radiobutton status text-center">
                                        <div id="dangXuLi" class="badge badge-info">COD</div>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-12 control-label" for="TrangThai">
                                <h6>Trạng Thái</h6>
                            </label>
                            <div id="tt" class="row col-12 text-center">
                                <!-- <div class="col-3">1</div>
                                                                    <div class="col-3">2</div>
                                                                    <div class="col-3">3</div>
                                                                    <div class="cols-3">4</div> -->
                                <div id="tt" class="form-group col">
                                    <input type="radio" name="status" value="processing" id="processing" />
                                    <label for="processing" class="radiobutton status text-center">
                                        <div id="dangXuLi" class="badge badge-info">Chờ Xử lí</div>
                                    </label>
                                </div>
                                <!-- <div id="tt" class="form-group col">
                                        <input type="radio" name="trangThai" value="2" id="tt2" />
                                        <label for="tt2" class="radiobutton status text-center">
                                            <div id="dangThucHien" class="badge badge-warning">Đang Thực Hiện</div>
                                        </label>
                                    </div> -->
                            </div>
                            <!-- <div id="tt" class="row col-12 text-center">
                                    <div id="tt" class="form-group col">
                                        <input type="radio" name="trangThai" value="3" id="tt3" />
                                        <label for="tt3" class="radiobutton status text-center">
                                            <div id="hoanThanh" class="badge badge-success">Hoàn Thành</div>
                                        </label>
                                    </div>
                                    <div id="tt" class="form-group col">
                                        <input type="radio" name="trangThai" value="4" id="tt4" />
                                        <label for="tt4" class="radiobutton status text-center">
                                            <div id="daHuy" class="badge badge-danger">Đã Huỷ</div>
                                        </label>
                                    </div>
                                </div> -->
                        </div>
                    </div>
                    <!--Kết thúc Thông tin chung đơn hàng-->

                    <!--Giúp việc Lau Dọn-->
                    {{#each servicelists}}
                    <div class="form-group">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <img src="{{serviceType.imagepath}}" class="img-fluid text-center">
                                    </div>
                                    <div class="col-lg-4 flex-center" style="padding-right: 50px;">
                                        <div class="form-group">
                                            <h6>{{serviceType.title}}</h6>
                                            <div class="row text-center">
                                                {{#each serviceType.services}}
                                                <div class="col-md-6 button">
                                                    <input type="radio" name="serviceId" value="{{id}}"
                                                        id="{{title}}" />
                                                    <label for="{{title}}" class="radiobutton">{{title}}</label>
                                                </div>
                                                {{/each}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <!--Kết thúc giúp việc lau dọn-->
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnLuu">Lưu thông tin đơn hàng</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" id="btnHuy">Huỷ thao tác</button>
                </div>
            </div>
        </div>
    </form>
</div>
<!--Kết thúc Dialog Thông tin sản phẩm-->