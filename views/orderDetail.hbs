<div class="col-md-9">
    <div class="row">
        <div class="span5">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th> </th>
                        <th>Service</th>
                        <th>Service Price</th>
                        <th>Date Start</th>
                        <th>Date End</th>
                        <th>Time Start</th>
                        <th>Quantity</th>
                        <th>Unit Cost</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each details}}
                    <tr>
                        <td>
                            <img src="{{Service.imagepath}}" style="width:50px; height:50px" /> </td>
                        </td>
                        <td>{{Service.title}}</td>
                        <td>{{Service.price}}</td>
                        <td>{{formatDate dateStart}}</td>
                        <td>{{formatDate dateEnd}}</td>
                        <td>{{timeStart}}</td>
                        <td>{{quantity}}</td>
                        <td>{{price}}</td>
                    </tr>
                    {{/each}}
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>

                        <td class="text-right h5">Total Cost:</td>
                        <td class="text-right h5">{{order.totalPrice}} VND</td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>