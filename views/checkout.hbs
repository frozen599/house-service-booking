<div class="container my-3">
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">{{cartItemCount}}</span>
            </h4>
            <ul class="list-group mb-3">
                {{#each items}}
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">{{quantity}} x {{item.title}}</h6>
                        <small class="text-muted">{{item.dateStart}} at </small>
                        <small class="text-muted">{{item.timeStart}} -> </small>
                        <small class="text-muted">{{item.dateEnd}}</small>
                    </div>
                    <span class="text-muted">{{price}}VNƒê</span>

                </li>
                {{/each}}
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (VND)</span>
                    <strong>{{totalPrice}} VND</strong>
                </li>
            </ul>
        </div>
