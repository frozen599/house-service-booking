                            <li>Sửa chữa thiết bị gia dụng</li> --}}
                            {{#each serviceTypes}}
                            <li class='serviceType/{{ServiceTypeId}}' data-id={{id}} data-string='{{title}}'>{{title}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                <div class="col-xs-6 col-md-4 form-item">
                    <div class="dropdown">
                        <div class="dropdown-toggle" data-toggle="dropdown">
                            <span id="services_search" class="k-input">Dịch vụ</span>
                            <input type="hidden" id="service_choose" name="id">
                            <button type="button">
                                <span class="caret"></span>
                            </button>
                        </div>
                        <ul id="services_search" class="dropdown-menu">
                            {{!-- <li>01 Người làm</li> --}}
                            {{#each services}}
                                <li class="ServiceType_{{ServiceTypeId}}" data-ServiceTypeId="{{ServiceTypeId}}" data-id={{id}} data-string='{{title}}'>{{title}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                <div class="col-xs-6 col-md-2 form-item">
                    <div class="dropdown">
                        <div class="dropdown-toggle" data-toggle="dropdown">
                            <span id="hour_search" class="k-input">Giờ bắt đầu</span>
                            <input type="hidden" id="hour_choose" name="timeStart">
                            <button type="button">
                                <span class="caret"></span>
                            </button>
                        </div>
                        <ul id="hour_search" class="dropdown-menu">
                            <li data-string="06:00">06:00</li>
                            <li data-string="07:00">07:00</li>
                            <li data-string="08:00">08:00</li>
                            <li data-string="09:00">09:00</li>
                            <li data-string="10:00">10:00</li>
                            <li data-string="11:00">11:00</li>
                            <li data-string="12:00">12:00</li>
                            <li data-string="13:00">13:00</li>
                            <li data-string="14:00">14:00</li>
                            <li data-string="15:00">15:00</li>
                            <li data-string="16:00">16:00</li>
                        </ul>
                    </div>
                </div>
                <div class="col-xs-6 col-md-2 form-item">
                    <input name="dateStart" id="date_choose" type="date" placeholder="Ngay lam" class="k-input" style="cursor: pointer;"
                        style="height: 90%">
                </div>
                <div class="col-xs-12 col-md-1 form-item-btn">
                    <input type="submit" value="Search" style="background:none;">
                </div>
            </div>
        </form>
    </div>
</div>
