<!-- Form tạo Service Type dành cho Admin -->
{{#if isAdmin}}
<div class="container text-center">
    <button id="btn-create-ServiceType" name="btn-create-ServiceType" class="btn btn-primary">Create Service
        Type</button>
</div>

<form id="form-ServiceType" class="form-horizontal" action="/servicetype" method="POST" enctype="multipart/form-data">
    <fieldset>

        <!-- Form Name -->
        <legend class="text-center">Add Service Types</legend>


        <!-- File Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="imagepath-serviceType">Image Path</label>
            <div class="col-md-4">
                <input id="imagepath-serviceType" name="myImage" class="input-file" type="file">
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="title">Title</label>
            <div class="col-md-5">
                <input id="title" name="title" type="text" placeholder="Tile of Service Types"
                    class="form-control input-md" required="">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="des1">Describe 1</label>
            <div class="col-md-5">
                <input id="des1" name="des1" type="text" placeholder="Describe 1 of ServiceType"
                    class="form-control input-md">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="des2">Describe 2</label>
            <div class="col-md-5">
                <input id="des2" name="des2" type="text" placeholder="Describe 2 of ServiceType"
                    class="form-control input-md">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="des3">Describe 3</label>
            <div class="col-md-5">
                <input id="des3" name="des3" type="text" placeholder="Describe 3 of ServiceType"
                    class="form-control input-md">

            </div>
        </div>

        <!-- Button (Double) -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="submit"></label>
            <div class="col-md-8">
                <button id="submit" name="submit" class="btn btn-success">Submit</button>
                <button id="cancel-create-ServiceType" name="cancel" class="btn btn-danger">Cancel</button>
            </div>
        </div>

    </fieldset>
</form>
{{/if}}

