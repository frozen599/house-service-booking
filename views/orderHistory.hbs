<div class="col-md-9">
    <div class="row">
        <div class="span5">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>OrderId</th>
                        <th>Date Order</th>
                        <th>Details</th>
                        <th>Total Cost</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{formatDate createdAt}}</td>
                        <td>
                            <a href="/users/orders/{{id}}">Order Details</a>
                        </td>
                        <td>{{totalPrice}} VND</td>
                        <td><span class="label label-primary">{{status}}</span>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>